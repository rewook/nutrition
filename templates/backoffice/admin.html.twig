<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Administration{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
          integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
            integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
        <p><b>Sandrine COUPART</b><br>
            Diéteticienne - Nutritionniste</p>


        <div class="collapse navbar-collapse" id="navbarScroll">


            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown ">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-bs-toggle="dropdown" aria-expanded="true">
                        GESTION
                    </a>
                    <ul class="dropdown-menu bg-site">

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('show_admin_patient') }}">PATIENT</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" href="{{ path('show_admin_recette') }}">RECETTES</a>

                        </li>
                        <li class="nav-item">

                            <a class="nav-link" href="{{ path('show_admin_ingredient') }}">INGREDIENTS</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" href="{{ path('show_admin_regime') }}">REGIMES</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" href="{{ path('show_admin_allergene') }}">ALLERGENES</a>
                        </li>

                    </ul>
                </li>


            </ul>
            <ul>
                <li class="nav-item">

                    <a class="nav-link" href="{{ path('app_accueil') }}">Retour sur le site</a>
                </li>
            </ul>
            <ul>
                <li class="nav-item">

                    <a class="nav-link" href="{{ path('app_logout') }}">Se Déconnecter</a>
                </li>
            </ul>


        </div>
    </div>
</nav>


{% for message in app.flashes('success') %}
    <div class="alert alert-success mt-3 alert-dismissible fade show">

        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

{% for message in app.flashes('danger') %}
    <div class="alert alert-danger mt-3 alert-dismissible fade show">

        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

{% for message in app.flashes('warning') %}
    <div class="alert alert-warning mt-3 alert-dismissible fade show">

        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

{% for message in app.flashes('info') %}
    <div class="alert alert-info mt-3 alert-dismissible fade show">

        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}


<div class="container mt-5">
    {% block body %}{% endblock %}
</div>


<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>
<script>
    const alerts = document.querySelectorAll('[class*="alert-"]')
    for (const alert of alerts) {
        setTimeout(function () {
            const bootstrapAlert = bootstrap.Alert.getOrCreateInstance(alert);
            bootstrapAlert.close();
        }, 5000);
    }
</script>

</body>

</html>
