{% extends '..' %}

{% block title %}Ingredient par Recette{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
        {{ form_row(form.ingredient, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col">
        {{ form_row(form.quantite, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col">
        {{ form_row(form.unite, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <button class="btn {{ button_color|default('btn-outline-primary') }}  mt-3">{{ button_label|default('AJOUTER') }}</button>
    {{ form_end(form) }}

    <div>

        <h1 class="text-center">Liste des Ingrédients</h1>
        <table class="table table-striped table-bordered mt-5" id="datatable">
            <thead>
                <tr>
                    <th class="text-center">Ingrédient</th>
                    <th class="text-center">Quantité</th>
                    <th class="text-center">Unité</th>

                </tr>
            </thead>
            <tbody>
                {% for ingredient in listeingredients %}
                    <tr>
                        <td class="text-center">{{ ingredient.ingredient.nom }}</td>
                        <td class="text-center">{{ ingredient.quantite }}</td>
                        <td class="text-center">{{ ingredient.unite }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div>
        <a href="{{ path('edit_admin_recette',{'id': recette}) }}" class="btn btn-outline-primary mt-3">Retour</a>
    </div>
{% endblock %}
