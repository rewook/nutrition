{% extends 'base.html.twig' %}

{% block title %} Patient connect√© {% endblock %}

{% block body %}
    <h1 class="text-center mt-5"> IDEES RECETTES ADAPTEES</h1>

    <div class="container">
        <div class="row">
            {% for recette in recettes %}
            <div class="col-md-4 mt-3">
                <div class="card mb-4 shadow-sm">

                    <div class="card-body">
                        <h5 class="card-title">{{ recette.titre }}</h5>
                        <p class="card-text">{{ recette.description }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Voir la recette</button>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            {% if loop.index % 3 == 0 %}
            <div class="row">
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
